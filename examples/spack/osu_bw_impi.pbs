#!/bin/bash

SHARED_APPS=/apps

export MODULEPATH=${SHARED_APPS}/modulefiles/spack/tcl/hb/linux-centos7-x86_64:$MODULEPATH
module load gcc-8.2.0
module load mpi/impi-2018.4.274
spack load osu-micro-benchmarks^intel-mpi

export I_MPI_DEBUG=5
export I_MPI_FABRICS=shm:ofa

NUMPROCS=`wc -l $PBS_NODEFILE`
PPN=1

cat $PBS_NODEFILE

#mpirun osu_bw
mpirun -np $NUMPROCS -ppn $PPN -f $PBS_NODEFILE osu_bw
