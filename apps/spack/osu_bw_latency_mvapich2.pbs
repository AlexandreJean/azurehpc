#!/bin/bash

SHARED_APPS=/apps

export MODULEPATH=${SHARED_APPS}/modulefiles/spack/tcl/hbv2/linux-centos7-x86_64:$MODULEPATH
export OMP_NUM_THREADS=1

module load gcc-9.2.0
module load mpi/mvapich2-2.3.2
spack load osu-micro-benchmarks^mvapich2

cat $PBS_NODEFILE

mpirun osu_bw
sleep 2
mpirun osu_latency
